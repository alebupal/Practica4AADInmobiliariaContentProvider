<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDireccion"
        android:layout_toEndOf="@+id/ivFoto"
        android:text="@string/etDireccion"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivFoto"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/ivFoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvPrecio"
        android:layout_toEndOf="@+id/ivFoto"
        android:text="Precio"
        android:layout_below="@+id/tvDireccion"
        android:layout_toRightOf="@+id/ivFoto"
        android:textSize="15dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tipo"
        android:id="@+id/tvTipo"
        android:layout_below="@+id/tvPrecio"
        android:layout_toRightOf="@+id/ivFoto"
        android:layout_toEndOf="@+id/ivFoto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localidad"
        android:id="@+id/tvLocalidad"
        android:layout_below="@+id/tvTipo"
        android:layout_toRightOf="@+id/ivFoto"
        android:layout_toEndOf="@+id/ivFoto" />

</RelativeLayout>